<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="BaseAppTheme" parent="Theme.MaterialComponents.Light">
        <!--Material theme attributes-->
        <item name="textAppearanceHeadline6">@style/TextAppearance.Collect.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.Collect.Subtitle1</item>
        <!--/Material theme attributes-->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/color_primary</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="colorSecondary">@color/color_secondary</item>
        <item name="primaryTextColor">@color/primary_text_color</item>
        <item name="secondaryTextColor">@color/secondary_text_color</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorSecondaryVariant">@color/color_secondary_dark</item>
        <item name="android:scrollbarThumbHorizontal">@drawable/thumb</item>
        <item name="android:scrollbarThumbVertical">@drawable/thumb</item>
        <item name="android:scrollbarSize">1.75mm</item>
        <item name="otpViewStyle">@style/OtpWidget.OtpView</item>
        <item name="android:scrollbarAlwaysDrawVerticalTrack">true</item>
        <item name="android:windowExitTransition" tools:targetApi="lollipop">@transition/main_exit</item>
        <item name="android:windowReenterTransition" tools:targetApi="lollipop">@transition/main_reenter</item>
        <item name="android:windowEnterTransition" tools:targetApi="lollipop">@transition/main_enter</item>
        <item name="android:fadeScrollbars">false</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@string/font_family_regular</item>
        <item name="android:panelBackground">@android:color/white</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="iconColor">@color/icons</item>
        <item name="dividerColor">@color/divider</item>
        <item name="android:textDirection" tools:targetApi="17">locale</item>
        <item name="dividerCompat">@android:drawable/divider_horizontal_bright</item>
        <item name="android:tintMode" tools:targetApi="21">src_in</item>
    </style>



    <!--Global Font Sizes-->
    <dimen name="font_size_extra_small">1sp</dimen>
    <dimen name="font_size_small">13sp</dimen>
    <dimen name="font_size_medium">16sp</dimen>
    <dimen name="font_size_large">19sp</dimen>
    <dimen name="font_size_extra_large">26sp</dimen>
    <dimen name="signup_text_margin_top">10dp</dimen>
    <style name="keyboard_row">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">65dp</item>
        <item name="android:divider">@drawable/keyboard_divider</item>
        <item name="android:gravity">center</item>
        <item name="android:showDividers">beginning|middle|end</item>
    </style>

    <style name="keyboard_button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:background">@drawable/keyboard_button_bg</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>

    <style name="LoginButtonStyle">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">@color/white</item>
        <!--        <item name="android:textAppearance">@style/Font1</item>-->
        <item name="android:textSize">@dimen/font_size_large</item>
        <item name="android:textAlignment" tools:targetApi="jelly_bean_mr1">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/button_round</item> <!--Made compatible with Android 4.4-->
        <item name="android:lineSpacingMultiplier">@fraction/line_spacing_medium</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">@fraction/letter_spacing_medium</item>
        <item name="android:stateListAnimator" tools:targetApi="lollipop">@null</item>
    </style>

    <style name="keyboard_number_button" parent="keyboard_button">
        <item name="android:textColor">@color/color_primary</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:tag">number_button</item>
    </style>

    <style name="AppTheme.ToolBarOverlay" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary" />

    <color name="primaryTextColor">#000000</color>
    <color name="light_grey">#E5E5E5</color>

    <style name="label_parent" parent="android:Widget.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
        <item name="android:gravity">left|center</item>
        <item name="android:textIsSelectable">false</item>
    </style>

    <style name="label_supporting_text_supporting_normal" parent="label_parent">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">#212121</item>
        <!--        <item name="android:fontFamily">@font/lato_regular</item>-->
    </style>

    <style name="DialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>
</resources>